{
  "schemaVersion": 1,
  "id": "armor_hud",
  "version": "${version}",
  "name": "BerdinskiyBear's ArmorHUD",
  "description": "This mod adds a minimalistic vanilla-like widget that shows your armor items and a warning if durability is low enough.",
  "authors": [
    "BerdinskiyBear"
  ],
  "contributors": [
    "Julienraptor01",
    "PolpOnline",
    "uku3lig"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/berdinskiybears-armor-hud",
    "sources": "https://github.com/BerdinskiyBear/armor-hud",
    "issues": "https://github.com/BerdinskiyBear/armor-hud/issues"
  },
  "license": "MIT",
  "icon": "assets/armor_hud/icon.png",
  "environment": "client",
  "entrypoints": {
    "client": [
      "ru.berdinskiybear.armorhud.ArmorHudModEntrypoint"
    ],
    "modmenu": [
      "ru.berdinskiybear.armorhud.config.ArmorHudModmenuIntegration"
    ]
  },
  "mixins": [
    "armor_hud.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${fabricloaderversion}",
    "minecraft": "~${mcversion}",
    "fabric-api": ">=${fabricapiversion}",
    "cloth-config2": ">=${clothconfigversion}"
  },
  "recommends": {
    "modmenu": ">=${modmenuversion}"
  }
}
